    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/out/${fileBasenameNoExtension}.out", // ${fileDirname}  "${workspaceRoot}/${file}.exe"
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "gcc",
            "environment": [],
            "externalConsole": true, //"console": "integratedTerminal",
            "osx": {
                "MIMode": "lldb"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}